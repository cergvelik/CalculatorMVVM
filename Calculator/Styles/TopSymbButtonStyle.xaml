<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TopSymbButton">
        <Setter Property="Button.FontFamily" Value="Calibri" />
        <Setter Property="Button.Background" Value="#18181a" />
        <Setter Property="Button.Foreground" Value="White" />
        <Setter Property="Button.Margin" Value="0" />
        <Setter Property="Button.FontSize" Value="24"/>
        <Setter Property="Button.FontWeight" Value="Medium"/>
        <Setter Property="Button.BorderBrush" Value="#18181a"/>
        <Setter Property="Button.Template" Value="{DynamicResource ButtonTemplate1}"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8" />
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>