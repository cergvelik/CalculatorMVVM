<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CalculatorButton">
        <Setter Property="Button.FontFamily" Value="Calibri" />
        <Setter Property="Button.Background" Value="#29292b" />
        <Setter Property="Button.Foreground" Value="White" />
        <Setter Property="Button.Margin" Value="0" />
        <Setter Property="Button.FontSize" Value="16"/>
        <Setter Property="Button.FontWeight" Value="SemiBold"/>
        <Setter Property="Button.BorderBrush" Value="#29292b"/>
        <Setter Property="Button.Template" Value="{DynamicResource ButtonTemplate1}"/>
        <Setter Property="Button.Margin" Value="0,10,0,10"/>
        <Setter Property="Button.HorizontalContentAlignment" Value="Stretch"/>

    </Style>
</ResourceDictionary>